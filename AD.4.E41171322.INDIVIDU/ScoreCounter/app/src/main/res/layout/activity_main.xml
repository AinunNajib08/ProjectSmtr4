<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="Tim_1"
        android:text="@string/button_count1"
        android:textSize="23dp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="442dp" />

    <Button
        android:id="@+id/count2"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="Tim_2"
        android:text="@string/button_count1"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="442dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="591dp" />

    <TextView
        android:id="@+id/mShowCount1"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:text="@string/count1"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/mShowCount2"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:text="@string/count2"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="328dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="174dp"
        app:srcCompat="@drawable/chels"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="117dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="138dp"
        android:layout_height="174dp"
        app:srcCompat="@drawable/mu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="117dp" />

</android.support.constraint.ConstraintLayout>